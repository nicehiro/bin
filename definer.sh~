#!/bin/bash
# define a word from dictionaryapi

apikey=6e6674b6-8a1b-4074-8fa4-7c253e8fcbd3

if [ $# -ne 2 ];
then
	echo -e "Usage: $0 word number"
	exit -1
fi

curl --silent
http://www.dictionaryapi.com/api/v1/references/learners/xml/$1?key=$apikey | \
	grep -o \<dt\>.*\</dt\> | \
	sed 's$</*[a-z]*>$$g' | \
	head -n $2 | nl
